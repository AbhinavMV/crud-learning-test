<!-- Page content-->
<div class="container">
  <div class="text-center mt-5">
    <h1>Users List</h1>
    <div class="col mb-12">
      <h5 class="text-center" style=<%= usersList.length!==0 && 'display:none'%> >
        No users in the List
      </h5>
      <div class="row mb-3" style=<%= usersList.length===0 && 'display:none' %>
      >

      <div class="col-md-2 themed-grid-col"><strong>Name</strong></div>
      <div class="col-md-3 themed-grid-col"><strong>Email</strong></div>
      <div class="col-md-2 themed-grid-col"><strong>Gender</strong></div>
      <div class="col-md-2 themed-grid-col"><strong>Status</strong></div>
      <div class="col-md-3 themed-grid-col"></div>
    </div>
    <% for( let i=0; i < usersList.length; i++ ) { %>
    <div class="row mb-3" id="<%=i%>">
      <div class="col-md-2 themed-grid-col"><%= usersList[i].name %></div>
      <div class="col-md-3 themed-grid-col"><%= usersList[i].email %></div>
      <div class="col-md-2 themed-grid-col"><%= usersList[i].gender %></div>
      <div class="col-md-2 themed-grid-col"><%= usersList[i].status %></div>
      <div class="col-md-3 themed-grid-col">
        <button
          type="button"
          class="btn btn-secondary btn-sm"
          data-bs-toggle="modal"
          data-bs-target="#userEditModal<%=i%>"
        >
          Edit
        </button>
        <%- include('userEditModal',{list: usersList[i],key:i}) %>
        <button
          class="btn btn-secondary btn-sm"
          onclick="handleDelete('<%=usersList[i]._id  %>')"
        >
          delete
        </button>
      </div>
    </div>
    <% } %>
  </div>
</div>
